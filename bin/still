#!/usr/bin/env node

var still = require('../').build,
  optimist = require('optimist');

var argv = optimist
  .usage('Usage: still [path] -o [output path] [options]')
  .demand(['o'])
  .describe('o', 'Output directory.')
  .alias('o', 'out')
  .describe('e', 'Template Engine to use for rendering')
  .alias('e', 'engine')
  .default('e', 'swig')
  .describe('encoding', 'File encoding (input and output)')
  .default('encoding', 'utf-8')
  .describe('verbose', 'Verbosity: 0 = silent, 1 = default, 2 = warnings, 3 = debug')
  .default('verbose', 1)
  .argv;

if (!argv._.length) {
  optimist.showHelp();
  process.exit(1);
}

still.build(argv);
